<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".views.ProductCreationFragment">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Reporta un Producto"
        android:textColor="@color/primary_text"
        android:textSize="30sp"></TextView>

    <android.support.v7.widget.CardView
        android:id="@+id/product_card_creation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/txt_title"
        android:layout_marginTop="15dp"
        android:padding="50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_gravity="start"
                android:src="@drawable/product_image" />

            <RatingBar
                android:id="@+id/product_starts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/product_image" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/txt_inpt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/txt_inpt_descrp">

                <EditText
                    android:id="@+id/product_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:hint="Nombre del Producto" />
            </android.support.design.widget.TextInputLayout>

            <Spinner
                android:id="@+id/product_cat"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/txt_inpt_name"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:entries="@array/categories"
                android:scrollbarSize="200dp">

            </Spinner>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/txt_inpt_descrp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/btn_save_product">

                <EditText
                    android:id="@+id/product_description"
                    android:layout_width="match_parent"
                    android:layout_height="182dp"
                    android:layout_gravity="bottom"
                    android:gravity="center_vertical"
                    android:hint="Entra una descripcion del Producto" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/btn_save_product"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:shadowColor="@color/colorAccent"
                android:text="Guadar Articulo"
                android:textSize="20dp" />


            <!--


                            -->
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>