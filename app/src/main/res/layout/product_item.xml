<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="320dp"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="180dp"
            android:layout_height="188dp"
            android:src="@drawable/tech" />

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_toRightOf="@id/item_image"
            android:text="Laptop"
            android:textSize="30sp" />

        <ImageButton
            android:id="@+id/btn_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_name"
            android:layout_toRightOf="@id/item_image"
            android:background="#ffffff"
            android:src="@drawable/share" />

        <ImageButton
            android:id="@+id/btn_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@id/item_name"
            android:layout_toRightOf="@id/btn_share"
            android:background="#ffffff"
            android:src="@drawable/location" />

        <RatingBar
            android:id="@+id/item_stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_image"
            android:layout_below="@id/btn_share" />

        <TextView
            android:id="@+id/item_descrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_image"
            android:text="SOY UNA GARGOLA DE NOCHE SALIMOS PARA DESASER MUJERES BAILOTEAN EN PERRO YA."
            android:textSize="20sp" />

    </RelativeLayout>


</android.support.v7.widget.CardView>